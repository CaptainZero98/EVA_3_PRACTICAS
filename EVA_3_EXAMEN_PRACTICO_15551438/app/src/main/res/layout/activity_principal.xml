<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Principal">

    <Button
        android:id="@+id/btnReproducir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickReproducir"
        android:text="Reproducir" />

    <Button
        android:id="@+id/btnPausa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickPausa"
        android:text="Pausa" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickSig"
        android:text="Siguiente" />

    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickAnterior"
        android:text="btnAnterior" />


    <RadioGroup
        android:id="@+id/rgRepro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbAleatoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aleatoria" />

        <RadioButton
            android:id="@+id/rbSecuencial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Secuencial" />
    </RadioGroup>
</LinearLayout>